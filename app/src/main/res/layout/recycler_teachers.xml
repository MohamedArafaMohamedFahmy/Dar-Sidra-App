<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:textAlignment="viewStart"
    android:padding="5dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/sub_color_app"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            >



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_code_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="2dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_name_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_student"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="2dp"
                android:layout_below="@id/text_code_teacher"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_student"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="2dp"
                android:gravity="start"
                android:layout_below="@id/text_name_teacher"
                />

        </RelativeLayout>

</androidx.cardview.widget.CardView>