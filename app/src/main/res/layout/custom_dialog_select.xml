<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="20dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_color_app"
        >


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/which_select"
            android:textColor="#000"
            android:fontFamily="@font/cairo_extralight"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout

            android:layout_below="@id/text_message"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            >

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_register_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/general_app"
                    android:background="@color/transparent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/button_register_teacher"
                    android:drawableEnd="@drawable/image_teacher"
                    android:drawablePadding="5dp"
                    />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_register_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/general_app"
                    android:background="@color/transparent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/button_register_student"
                    android:drawableEnd="@drawable/image_student"
                    android:drawablePadding="5dp"
                    />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>